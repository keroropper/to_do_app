<div class="dairy-task-header">
  <span class="today-label"><%= l Date.parse(@date), format: "%-m月%-d日(%a)" %>のタスク</span>
  <span class="user-name"><%= link_to "@#{ @user.name }", @user %></span>
</div>

<% if user_signed_in? %>
  <div class="task-field">
    <% if @task_by_date[@date].present? %>
      <% @task_by_date[@date].each do |task| %>
        <div class="past-task">
          <%= check_box_tag 'completed', '1', task.completed?, disabled: true %>
          <%= task.title %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>


