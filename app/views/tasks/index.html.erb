  <div class="col-md-7 main-contents">

    <p class="today-label"><%= l @date, format: "%-m月%-d日(%a)" %>のタスク</p>
    <% if user_signed_in? %>
      <div class="task-field">
        <% @task_by_date[@date].each do |task| %>
          <div class="past-task">
            <%= check_box_tag 'completed', '1', task.completed?, disabled: true %>
            <%= task.title %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-md-3 side-bar">
    <%= render 'shared/side_bar' %>
  </div>
