<div class="added-task" id="task_<%= task.id %>">
    <%= form_with(model: task, url: toggle_task_path(task), local: false) do |f| %>
      <label id="<%= dom_id(task) %>" class="<%= task.completed? ? 'completed' : '' %>">
        <%= f.check_box :completed, onchange: "this.form.requestSubmit()" %>
      </label>
    <span class="task-title"><%= task.title %></span>
    <% end %>
    <%= link_to edit_task_path(task), class: "btn btn-warning", id: "edit-task_#{task.id}", remote: true  do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to task_path(task), method: :delete, class: "btn btn-danger", id: "delete-task_#{task.id}", remote: true  do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
</div>