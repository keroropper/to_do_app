
<% if flash[:danger].present? && flash[:danger].length > 0 %>
  <% flash.each do |message_type, messages| %>
    <% messages.each do |message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type == 'notice' ? 'success' : 'danger' } alert-#{ class_name } ") %> 
    <% end %>
  <% end %>
<% else %>
  <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type == 'notice' ? 'success' : 'danger' } alert-#{ class_name } ") %> 
  <% end %>
<% end %>
